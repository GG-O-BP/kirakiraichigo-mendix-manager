{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "kirakiraichigo-mendix-manager",
    "version": "0.2.1",
    "identifier": "dev.GG-O-BP.kirakiraichigo",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:21420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "kirakiraichigo-mendix-manager",
                "width": 1280,
                "height": 720
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/kirakiraichigo.png", "icons/kirakiraichigo.ico"]
    }
}
