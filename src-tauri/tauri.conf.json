{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "KiraIchi",
    "version": "0.4.0",
    "identifier": "dev.GG-O-BP.kirakiraichigo",
    "build": {
        "beforeDevCommand": "bun dev",
        "devUrl": "http://localhost:21420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "KiraIchi",
                "width": 1280,
                "height": 720,
                "resizable": true,
                "dragDropEnabled": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/kirakiraichigo.png", "icons/kirakiraichigo.ico"]
    }
}
